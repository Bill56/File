<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/image_file_icon"
        android:src="@drawable/ic_folder_open_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文件名称"
        android:textSize="16sp"
        android:id="@+id/text_file_name"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/image_file_icon"
        android:layout_toEndOf="@id/image_file_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="概要信息"
        android:id="@+id/text_file_info"
        android:layout_alignBottom="@id/image_file_icon"
        android:layout_alignLeft="@id/text_file_name"
        android:layout_alignStart="@id/text_file_name" />

    <ImageButton
        android:src="@drawable/ic_more_vert_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton_more"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        style="@android:style/Widget.DeviceDefault.Button.Borderless.Small" />


</RelativeLayout>